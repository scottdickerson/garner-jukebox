---
import Layout from '../layouts/Layout.astro'
import { AttractScreenCoins } from '../components/AttractScreenCoins'
---

<Layout title="Garner Jukebox App">
    <main class="relative">
        <div
            class="relative pt-[175px] card-flip-container w-screen h-screen flex flex-col items-center bg-attractScreen bg-cover bg-center overflow-clip"
        >
            <img
                src="/images/RecordLarge.svg"
                alt="Record"
                class="absolute left-0 top-0 rotate-x-animation"
            />
            <img
                src="/images/TitleEnglish.svg"
                alt="Garner Jukebox"
                class="w-[1000px] absolute card rotate-y-animation"
            />
            <img
                src="/images/TitleEnglishBlue.svg"
                alt="Garner Jukebox"
                class="w-[1000px] absolute card rotate-y-animation-reverse"
            />
        </div>
        <div class="flex justify-between absolute bottom-0 w-full">
            <AttractScreenCoins client:load />
        </div>
    </main>
</Layout>

<style>
    @keyframes rotateX {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    .rotate-x-animation {
        animation: rotateX 5s linear infinite;
    }

    @keyframes rotateY {
        from {
            transform: rotateY(0deg);
        }
        to {
            transform: rotateY(360deg);
        }
    }

    @keyframes rotateYReverse {
        from {
            transform: rotateY(-180deg);
        }
        to {
            transform: rotateY(180deg);
        }
    }

    .rotate-y-animation {
        animation: rotateY 8s linear infinite;
    }
    .rotate-y-animation-reverse {
        animation: rotateYReverse 8s linear infinite;
    }

    .card-flip-container {
        perspective: 1000px; /* Remove this if you don't want the 3D effect */
    }
    .card {
        backface-visibility: hidden;
        transform-style: preserve-3d;
    }
</style>
